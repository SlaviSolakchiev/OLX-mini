@model PagingViewModel

<nav aria-label="...">
    <ul class="pagination justify-content-center">
        <li class="page-item @if (!Model.HasPreviousPage) {
        <text>disabled</text>
}">
            <a class="page-link" asp-action="ListAll" asp-route-id="@Model.NextPageNumber">Previous</a>
        </li>
        @for (int i = Model.PageNumber - 3; i < Model.PageNumber; i++)
        {
            @if (i > 0)
            {
                <li class="page-item"><a class="page-link" asp-action="ListAll" asp-route-id="@i">@i</a></li>
            }

        }
        <li class="page-item active">
            <span class="page-link">
                @Model.PageNumber
                <span class="sr-only"></span>
            </span>
        </li>
        @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + 3; i++)
        {
            @if (i > 0)
            {
                <li class="page-item"><a class="page-link" asp-action="ListAll" asp-route-id="@i">@i</a></li>
            }

        }
        <li class="page-item @if (!Model.HasPreviousPage) {
        <text>disabled</text>
 }">
            <a class="page-link" asp-action="ListAll" asp-route-id="@Model.NextPageNumber">Next</a>
        </li>
    </ul>
</nav>